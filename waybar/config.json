{
  "layer": "bottom",
  "exclusive": true,
  "position": "bottom",
  "height": 32,
  "spacing": 0,
  "margin": "0 12 8 12",
  "modules-left": [
    "custom/uptime",
    "cpu",
    "memory",
    "temperature"
  ],
  "modules-center": [
    "clock"
  ],
  "modules-right": [
    "network",
    "pulseaudio",
    "battery"
  ],
  
  "clock": {
    "interval": 1,
    "format": "{:%H:%M:%S}",
    "format-alt": "{:%A, %B %d, %Y}",
    "tooltip": false
  },
  
  "custom/uptime": {
    "exec": "uptime -p | sed 's/up //g'",
    "interval": 60,
    "format": "{}",
    "tooltip": false
  },
  
  "temperature": {
    "hwmon-path": "/sys/class/hwmon/hwmon1/temp1_input",
    "critical-threshold": 80,
    "format": "<span font='14px'>󰔏</span> {temperatureC}°C",
    "format-critical": "<span font='18px'>󱃂</span> {temperatureC}°C",
    "interval": 5,
    "tooltip": false
  },
  
  "cpu": {
    "interval": 1,
    "format": "<span font='20px'> </span>{usage}%",
    "tooltip-format": "CPU Usage:\nCore 0: {load0}%\nCore 1: {load1}%\nCore 2: {load2}%\nCore 3: {load3}%\nCore 4: {load4}%\nCore 5: {load5}%\nCore 6: {load6}%\nCore 7: {load7}%\nCore 8: {load8}%\nCore 9: {load9}%\nCore 10: {load10}%\nCore 11: {load11}%\nCore 12: {load12}%\nCore 13: {load13}%\nCore 14: {load14}%\nCore 15: {load15}%"
  },
  
  "memory": {
    "interval": 5,
    "format": "<span font='20px'> </span>{used:0.1f}G",
    "tooltip-format": "RAM:\n  Used: {used:0.1f}G / {total:0.1f}G ({percentage}%)\n  Available: {avail:0.1f}G\n\nSwap:\n  Used: {swapUsed:0.1f}G / {swapTotal:0.1f}G ({swapPercentage}%)"
  },
  
  "pulseaudio": {
    "format": "<span font='14px'>{icon}</span> {volume}%",
    "format-muted": "<span font='14px'>󰝟</span> {volume}%",
    "format-icons": {
      "default": ["󰕿"]
    },
    "on-click": "pavucontrol",
    "tooltip-format": "Volume: {volume}%"
  },
  
  "network": {
    "interval": 5,
    "format-wifi": "<span font='20px'>󰤨 </span>{essid}",
    "format-ethernet": "<span font='20px'>󰈀 </span>{ipaddr}",
    "format-disconnected": "<span font='20px'>󰤭 </span>Disconnected",
    "format-linked": "<span font='20px'>󰤩 </span>No Internet",
    "tooltip-format-wifi": "Network: {essid}\nSignal: {signalStrength}%\nIP: {ipaddr}/{cidr}\nSpeed: ↓ {bandwidthDownBytes} ↑ {bandwidthUpBytes}",
    "tooltip-format-ethernet": "Ethernet\nIP: {ipaddr}/{cidr}\nSpeed: ↓ {bandwidthDownBytes} ↑ {bandwidthUpBytes}",
    "tooltip-format-disconnected": "Disconnected",
    "on-click": "nm-connection-editor"
  },
  
  "battery": {
    "bat": "BAT1",
    "interval": 60,
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "<span font='20px'>{icon}</span> {capacity}%",
    "format-charging": "<span font='18px'>󰂄</span> {capacity}%",
    "format-plugged": "<span font='20px'>󰚥</span> {capacity}%",
    "format-icons": ["󰂎","󰁻", "󰁽 ", "󰁿", "󰂁"],
    "tooltip-format": "{capacity}% - {timeTo}"
  }
}
