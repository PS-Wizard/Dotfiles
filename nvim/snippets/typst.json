{
    "hetvid": {
        "prefix": "hetvid",
        "body": [
            "#import \"@preview/hetvid:0.1.0\": *",
            "#show: hetvid.with(",
                "  title: [${1:Week 1: Title}],",
                "  author: \"${2:Swoyam Pokharel}\",",
                "  affiliation: \"${3:Shiv Kumar Yadav}\",",
                "  header: \"${4:Week 1 ~ Tutorial}\",",
                "  date-created: \"${5:2026-01-01}\",",
                "  date-modified: \"${6:2026-01-01}\",",
                "  // abstract: [${7:Abstract here}],",
                "  toc: true,",
                ")"
        ],
        "description": "Hetvid document header"
    },
    "Fraction": {
        "prefix": "ff",
        "body": ["frac(${1:num}, ${2:den})${0}"],
        "description": "Fraction"
    },
    "Sum": {
        "prefix": "ssum",
        "body": ["sum_(${1:i}=${2:0})^(${3:n}) ${0}"],
        "description": "Summation"
    },
    "Integral": {
        "prefix": "iint",
        "body": ["integral_(${1:-oo})^(${2:oo}) ${3} dif ${4:x}"],
        "description": "Integral"
    },
    "Limit": {
        "prefix": "llim",
        "body": ["lim_(${1:x} -> ${2:oo}) ${0}"],
        "description": "Limit"
    },
    "Partial Derivative": {
        "prefix": "pd",
        "body": ["frac(partial ${1:f}, partial ${2:x})${0}"],
        "description": "Partial derivative"
    },
    "Vector bold": {
        "prefix": "vv",
        "body": ["bold(${1:v})${0}"],
        "description": "Bold vector"
    },
    "Matrix": {
        "prefix": "mat",
        "body": [
            "mat(delim: \"[\",",
                "  ${1:a}, ${2:b};",
                "  ${3:c}, ${4:d}",
                ")${0}"
            ],
            "description": "2x2 matrix with square brackets"
    },
    "Cases": {
        "prefix": "cases",
        "body": [
            "cases(",
            "  ${1:expr_1} & \"if\" ${2:cond_1},",
            "  ${3:expr_2} & \"otherwise\"",
            ")${0}"
        ],
        "description": "Piecewise cases"
    },
    "Norm": {
        "prefix": "norm",
        "body": ["||${1:x}||${0}"],
        "description": "Norm"
    },
    "Set builder": {
        "prefix": "set",
        "body": ["{ ${1:x} in ${2:RR} : ${3:cond} }${0}"],
        "description": "Set builder notation"
    },
    "Implies": {
        "prefix": "impl",
        "body": ["==>"],
        "description": "Implies"
    },
    "Iff": {
        "prefix": "iff",
        "body": ["<==>"],
        "description": "If and only if"
    },
    "For all": {
        "prefix": "fall",
        "body": ["forall ${0}"],
        "description": "For all"
    },
    "There exists": {
        "prefix": "tex",
        "body": ["exists ${0}"],
        "description": "There exists"
    },
    "Infinity": {
        "prefix": "oo",
        "body": ["oo"],
        "description": "Infinity"
    },
    "Real numbers": {
        "prefix": "RR",
        "body": ["RR"],
        "description": "Real numbers"
    },
    "Natural numbers": {
        "prefix": "NN",
        "body": ["NN"],
        "description": "Natural numbers"
    },
    "Integer numbers": {
        "prefix": "ZZ",
        "body": ["ZZ"],
        "description": "Integers"
    },
    "Divider": {
        "prefix": "line",
        "body": ["#line(length: 100%, stroke: 0.4pt + luma(160))"],
        "description": "Elegant horizontal rule"
    }
}
