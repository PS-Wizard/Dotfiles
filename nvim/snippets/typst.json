{
    "h1": {
        "prefix": "h1",
        "body": ["= $0"],
        "description": "Heading 1"
    },
    "h2": {
        "prefix": "h2",
        "body": ["== $0"],
        "description": "Heading 2"
    },
    "h3": {
        "prefix": "h3",
        "body": ["=== $0"],
        "description": "Heading 3"
    },
    "h4": {
        "prefix": "h4",
        "body": ["==== $0"],
        "description": "Heading 4"
    },
    "h5": {
        "prefix": "h5",
        "body": ["===== $0"],
        "description": "Heading 5"
    },
    "bold": {
        "prefix": "bold",
        "body": ["*$0*"],
        "description": "Bold text"
    },
    "italic": {
        "prefix": "italic",
        "body": ["_$0_"],
        "description": "Italic text"
    },
    "underline": {
        "prefix": "underline",
        "body": ["#underline[$0]"],
        "description": "Underline text"
    },
    "strikethrough": {
        "prefix": "strike",
        "body": ["#strike[$0]"],
        "description": "Strikethrough text"
    },
    "code_inline": {
        "prefix": "code",
        "body": ["`$0`"],
        "description": "Inline code"
    },
    "codeblock": {
        "prefix": "codeblock",
        "body": [
            "```$1",
            "$0",
            "```"
        ],
        "description": "Code block with language"
    },
    "link": {
        "prefix": "link",
        "body": ["#link(\"$1\")[$0]"],
        "description": "Hyperlink"
    },
    "url": {
        "prefix": "url",
        "body": ["https://$0"],
        "description": "URL"
    },
    "image": {
        "prefix": "img",
        "body": [
            "#figure(",
            "  image(\"$1\", width: ${2:80%}),",
            "  caption: [$0]",
            ")"
        ],
        "description": "Image with caption"
    },
    "image_simple": {
        "prefix": "image",
        "body": ["#image(\"$1\", width: ${2:80%})"],
        "description": "Simple image without caption"
    },
    "pagebreak": {
        "prefix": "pagebreak",
        "body": ["#pagebreak()"],
        "description": "Page break"
    },
    "cite": {
        "prefix": "cite",
        "body": ["@$0"],
        "description": "Citation"
    },
    "cite_multiple": {
        "prefix": "cites",
        "body": ["@$1 @$2 @$0"],
        "description": "Multiple citations"
    },
    "footnote": {
        "prefix": "footnote",
        "body": ["#footnote[$0]"],
        "description": "Footnote"
    },
    "bullet_list": {
        "prefix": "list",
        "body": [
            "- $1",
            "- $2",
            "- $0"
        ],
        "description": "Bullet list"
    },
    "numbered_list": {
        "prefix": "olist",
        "body": [
            "+ $1",
            "+ $2",
            "+ $0"
        ],
        "description": "Numbered list"
    },
    "table": {
        "prefix": "table",
        "body": [
            "#figure(",
            "  table(",
            "    columns: ${1:3},",
            "    [*Header 1*], [*Header 2*], [*Header 3*],",
            "    [$2], [$3], [$4],",
            "    [$0], [], [],",
            "  ),",
            "  caption: [${5:Table caption}]",
            ")"
        ],
        "description": "Table with caption"
    },
    "blockquote": {
        "prefix": "quote",
        "body": [
            "#quote(block: true)[$0]"
        ],
        "description": "Block quote"
    },
    "comment": {
        "prefix": "//",
        "body": ["// $0"],
        "description": "Comment"
    },
    "block_comment": {
        "prefix": "/*",
        "body": [
            "/* $0 */"
        ],
        "description": "Block comment"
    },
    "align_center": {
        "prefix": "center",
        "body": [
            "#align(center)[$0]"
        ],
        "description": "Center align"
    },
    "align_right": {
        "prefix": "right",
        "body": [
            "#align(right)[$0]"
        ],
        "description": "Right align"
    },
    "vspace": {
        "prefix": "vspace",
        "body": ["#v(${1:1em})"],
        "description": "Vertical space"
    },
    "hspace": {
        "prefix": "hspace",
        "body": ["#h(${1:1em})"],
        "description": "Horizontal space"
    },
    "box": {
        "prefix": "box",
        "body": [
            "#box(",
            "  fill: luma(${1:240}),",
            "  inset: ${2:8pt},",
            "  radius: ${3:4pt},",
            ")[$0]"
        ],
        "description": "Box with background"
    },
    "math_inline": {
        "prefix": "math",
        "body": ["$$0$"],
        "description": "Inline math"
    },
    "math_block": {
        "prefix": "mathblock",
        "body": [
            "$ $0 $"
        ],
        "description": "Block math equation"
    },
    "lorem": {
        "prefix": "lorem",
        "body": ["#lorem(${1:50})"],
        "description": "Lorem ipsum placeholder text"
    },
    "no_indent": {
        "prefix": "noindent",
        "body": ["#par(first-line-indent: 0em)[$0]"],
        "description": "Paragraph without first-line indent"
    }
}
